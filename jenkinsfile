pipeline {
    agent any
    environment {
        PROJECT_ID = 'searce-playground-v1'
                CLUSTER_NAME = 'moglix-test-cluster'
                LOCATION = 'asia-south1-a'
                REGION = 'asia-south1'
                REPONAME = 'moglix-test'
                CREDENTIALS_ID = 'kubernetes'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                sh '''
                    whoami
                    sudo docker build -t testing-from-jenkins:latest .
                '''
            }
        }
    }
}
