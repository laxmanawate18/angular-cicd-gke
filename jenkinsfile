pipeline {
    agent any
    environment {
        PROJECT_ID = 'searce-playground-v1'
                CLUSTER_NAME = 'moglix-test-cluster'
                LOCATION = 'asia-south1-a'
                REGION = 'asia-south1'
                REPONAME = 'moglix-test'
                CREDENTIALS_ID = 'kubernetes'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                sh '''
                    whoami
                    sudo docker build -t asia-south1-docker.pkg.dev/searce-playground-v1/moglix-test/demo-angular:latest .
                '''
            }
        }
        stage('Push auth and image') {
            steps {
                 sh 'gcloud auth configure-docker     asia-south1-docker.pkg.dev'
                 sh 'docker push ${REGION}-docker.pkg.dev/${PROJECT_ID}/${REPONAME}/demo-angular:${env.BUILD_ID}' 
                                 
            }
        }
    }
}
